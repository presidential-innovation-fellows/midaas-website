.chart-widget.widget.primary-widget
  .widget-header
    h2.chart-title
    p United States of America
  #compare
    .perspectives
      ul.toggles
        li.toggle.overall Overall
        li.middle-child.toggle.race Race
        li.middle-child.toggle.gender Gender
        li.toggle.age Age
  .chart
  #loading-icon.loading-icon.active
    img(src="/assets/img/loading-ring.svg")
  #chart-error.chart-error
    .error-icon
      i.fa.fa-exclamation-triangle
    .error-message
