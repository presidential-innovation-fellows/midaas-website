doctype html
html.no-js(lang='en')
  include ../../modules/_head.jade
  script.
    if (window.Ag == null) {
      window.Ag = {};
    }

    window.Ag.config = {
      chart1: {
        title: "Explore Income Distributions",
        type: "bar",
        interact: {
          type: "IncomeQuantilesCompare",
          query: {
            compare: "overall",
            compareRegion: "US"
          },
          ui: {
            compare: true,
            compareRegion: true
          }
        }
      }
    };
  body.tools-tool.tool-comparison-chart
    include ../../modules/_nav.jade
    section.main-content
      .usa-grid
        header
          h1 Comparison Chart
          p
            | Compare data by multiple dimensions.
        .chart-widget.widget.primary-widget
          #chart1
          .tool-description
            h2 Purpose
            p
              | This tool allows users to explore income distributions across
              | different geographies by categories (Race, Gender, and Age Groups).
              | Coming soon will be city data and exploration across time.
        p(style="padding-bottom: 20px;")
    include ../../modules/_footer.jade
